			.service-tizers
				a.service-tizers__item(style="background-image: url('img/service-1.jpg');" href="#")
					.service-tizers__item-content
						.title
							| Энергоцентры
							br
							| и котельные
						.text Энергоцентры  и котельные
						i.icon.icon__triangle--white
				a.service-tizers__item(style="background-image: url('img/service-2.jpg');" href="#")
					.service-tizers__item-content
						.title
							| Газовые котлы
							br
							| и системы отопления
						.text Газовые котлы и системы отопления
						i.icon.icon__triangle--white
