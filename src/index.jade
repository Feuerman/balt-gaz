				li.main-nav__item
					a.main-nav__link(href="#") 
						i.icon.icon__icon-menu--2
						span Корпоративный сайт
				li.main-nav__item
					a.main-nav__link(href="#") 
						i.icon.icon__icon-menu--3
						span Портал
		.container
			.service-tizers
				a.service-tizers__item(style="background-image: url('img/service-1.jpg');" href="#")
					.service-tizers__item-content
